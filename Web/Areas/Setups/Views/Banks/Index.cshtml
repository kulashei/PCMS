@(Html.DevExtreme().DataGrid<Bank>()
	.DataSource(ds => ds.Mvc()
		.Controller("BanksApi")
		.LoadAction("Get")
		.InsertAction("Post")
		.UpdateAction("Put")
		.DeleteAction("Delete")
		.Key("BankId")
	)
	.RemoteOperations(true)
	.Columns(columns =>
	{
		columns.AddFor(m => m.BankCode);

		columns.AddFor(m => m.BankName);
	})
	.Editing(e => e
		.AllowAdding(true)
		.AllowUpdating(true)
		.AllowDeleting(true)
	)
)